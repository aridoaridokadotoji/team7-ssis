@model team7_ssis.ViewModels.PurchaseOrderViewModel


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Receive Goods</title>
</head>

<body>
    <h1>Submit delivery order forms & invoices and update inventory</h1>
    <div style="width:90%; margin:0 auto" class="container">

        <a runat="server" class="popup btn btn-primary" href="~/Views/DeliveryOrder/ReceiveGoods" style="margin-bottom:20px; margin-top:20px;">View Related Delivery Orders</a>
        <div>
            <table>
                <thead>
                    <tr>
                        <td>Purchase Order #</td>
                        <td> Supplier Name</td>
                        <td>Order Date</td>
                    </tr>
                </thead>
                <tr>
                    <td>@Html.DisplayFor(model => model.PurchaseOrderNo)</td>
                    <td>@Html.DisplayFor(model => model.SupplierName)</td>
                    <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                </tr>
            </table>
            <a class="popup btn btn-primary" href="#" style="margin-bottom:20px; margin-top:20px;">View</a>
        </div>
    </div>

    <br /><br />
    @Html.Partial("_OutstandingItemsTable")

    <h3>Submit forms to Bursar</h3>
    <h2>Forms will be routed to Bursar's department for payment to vendor</h2>

    <table>
        <tr>
            <td>File:</td>
            <td>
                <input type="file" name="UploadedFile" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @using (Html.BeginForm("ImageUpload", "DeliveryOrder", FormMethod.Post, new { Id = "Form1" }))
                {
                    <input type="submit" name="Submit" value="AddFile" />
                }
            </td>
        </tr>
    </table>
    <div class="row mt-3">
        <div class="col-md-12">
            @using (Html.BeginForm("Submit", "DeliveryOrder", FormMethod.Post, new { Id = "Form1" }))
             { <button class="btn btn-primary">Confirm</button>}
            @using (Html.BeginForm("Index", "DeliveryOrder", FormMethod.Post, new { Id = "Form1" }))
             {<button class="btn btn-primary">Cancel</button>}
        </div>
    </div>
</body>
</html>


<div class="row mt-3">
    <div class="col-md-12">
        <h3>Authorising Supervisor</h3>
        <select class="custom-select">
            @foreach (var supervisor in Model.supervisors)
            {
                <option value="@supervisor.Id">@supervisor.FirstName @supervisor.LastName</option>
            }
        </select>

        <h3>Authorising Manager</h3>
        <select class="custom-select">
            @foreach (var manager in Model.managers)
            {
            <option value="@manager.Id">@manager.FirstName @manager.LastName</option>
            }
        </select>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <button class="btn btn-default" id="cancelBtn">Cancel</button>
        <button class="btn btn-primary" id="confirmBtn">Confirm</button>
    </div>
</div>


<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <table id="addItemTable" class="table table.sm table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>

                                    <th>Item Code</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>In Stock</th>
                                    <th>Unit of Measure</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>
            </div>
            <div class="modal-footer">

                <button id="addToReq" type="button" class="btn btn-primary">Add to StockAdjustment</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {


        var myTable = $('#myTable').DataTable({

            "bDeferRender": true,
            columns: [
                { title: "ItemCode" },
                { title: "Description" },
                { title: "UnitPrice" },
                { data: null },
                { data: null },
                { defaultContent: '<i class="fa fa-times pointer" aria-hidden="false"></i>' }
            ],
            "columnDefs": [

                {

                    "targets": -3,

                    "render": function (data, type, full, meta) {

                        return "<input type = 'textbox' id = 'Adjustment' value = 'input adjustment'>"

                    }
                },


                {
                    "targets": -2,

                    "render": function (data, type, full, meta) {

                        return "<input type = 'textbox' id = 'Reason' value = 'input Reason'>"

                    }

                }

            ]

        });

        var addItemTable = $('#addItemTable').DataTable({
            ajax: {
                url: "/api/manage/items",
                dataSrc: ""
            },
            pageLength: 5,
            columns: [

                { "data": "ItemCode", "autoWidth": true },
                { "data": "ItemCategoryName", "autoWidth": true },
                { "data": "Description", "autoWidth": true },
                { "data": "Quantity", "autoWidth": true },
                { "data": "Uom", "autoWidth": true },
            ],

            select: "single"
        });

        $('#addItemBtn').click(function () {
            $('#myModal').modal({
                backdrop: 'static',
            });
        })



        $('#saveAsBtn').click(function () {
           
        })

        $('#cancelBtn').click(function () {
            window.location.href = "/StockAdjustment";
        })
        $('#confirmBtn').click(function () {

           

        })




        $('#addToReq').click(function () {
            var data = $('#addItemTable').DataTable().rows({ selected: true }).data().toArray();
            //console.log(data);
            //TODO: write some logic that will add quantity to the requisitionDetail
            //var qty = parseInt($('#qtyInput').val());
            myTable.row.add([data[0].ItemCode, data[0].Description, data[0].UnitPrice]).draw();
            $('#myModal').modal('hide');
        })

        $('#myTable tbody').on('click', 'i.fa.fa-times', function () {
            myTable
                .row($(this).parents('tr'))
                .remove()
                .draw();
        });
    })


</script>




















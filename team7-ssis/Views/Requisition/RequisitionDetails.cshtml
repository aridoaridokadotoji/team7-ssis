@model team7_ssis.ViewModels.RequisitionDetailViewModel

@{
    ViewBag.Title = "RequisitionDetails";
}

<h2 class="mb-3">Requisition Details</h2>
<div class="row mb-3">
    <div class="col-md-4">
        <div class="label">Requisition</div>
        @Model.RequisitionID
    </div>
    <div class="col-md-8">
        <div class="label">Department</div>
        @Model.Department
    </div>
    <div class="col-md-12">
        <div class="label">Collection Point</div>
        @Model.CollectionPoint
    </div>
    <div class="col-md-4">
        <div class="label">Created By</div>
        @Model.CreatedBy
    </div>
    <div class="col-md-4">
        <div class="label">Updated By</div>
        @Model.UpdatedBy
    </div>
    <div class="col-md-4">
        <div class="label">Approved By</div>
        @Model.ApprovedBy
    </div>
    <div class="col-md-4">
        <div class="label">Created Time</div>
        @Model.CreatedTime
    </div>
    <div class="col-md-4">
        <div class="label">Updated Time</div>
        @Model.UpdatedTime
    </div>
    <div class="col-md-4">
        <div class="label">Approved Time</div>
        @Model.UpdatedTime
    </div>
</div>

<table id="myTable" class="table table-striped table-bordered mb-3" style="width: 100%">
    <thead>
        <tr>
            <th>Item Code</th>
            <th>Description</th>
            <th>Qty</th>
            <th>Status</th>
        </tr>
    </thead>
</table>

<div class="row">
    <div class="col-md-12">
        @if (User.IsInRole("Department Head") || User.IsInRole("Admin"))
        {
            <button type="button" class="btn btn-secondary">Cancel</button>
            <button type="button" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i> Reject</button>
            <button type="button" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> Approve</button>
        }
        else
        {
            <button type="button" class="btn btn-secondary">Back</button>
        }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Custom/RequisitionDetails.js"></script>
}